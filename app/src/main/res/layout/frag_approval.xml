<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/adv_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@mipmap/adv"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <LinearLayout
            android:id="@+id/approval_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/approval_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_approval"
                android:textColor="@color/blue_text"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_16"
                tools:ignore="SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/under_approval_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/sign"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/under_approval"
                android:textColor="@color/blue_text"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_16"
                tools:ignore="SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/approval_result_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/write_record"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/approval_result"
                android:textColor="@color/blue_text"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_16"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_20">
        <LinearLayout
            android:id="@+id/personal_center_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/write_record"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personal_center_text"
                android:textColor="@color/blue_text"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_16"
                tools:ignore="SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/search_contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/book"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_contact_text"
                android:textColor="@color/blue_text"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_16"
                tools:ignore="SpUsage" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sign_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:background="@mipmap/edit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_sign_text"
                android:textColor="@color/blue_text"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="@dimen/dp_16"
                tools:ignore="SpUsage" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>